.top {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 60PX;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.top .img {
  width: 28PX;
  height: 28PX;
}
.top .right .img {
  margin-right: 15PX;
}
.top .left .img {
  margin-left: 15PX;
}
